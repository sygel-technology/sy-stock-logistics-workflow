<odoo>

    <record id="stock_picking_requirement_rule_form_view" model="ir.ui.view">
        <field name="name">stock.picking.requirement.rule.form.view</field>
        <field name="model">stock.picking.requirement.rule</field>
        <field name="arch" type="xml">
            <form string="Picking Requirement Rule">
                 <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                    </div>
                    <group>
                        <field
                            name="domain"
                            widget="domain"
                            options='{"model": "stock.picking"}'
                        />
                        <field name="error_description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="stock_picking_requirement_rule_tree_view" model="ir.ui.view">
        <field name="name">stock.picking.requirement.rule.tree.view</field>
        <field name="model">stock.picking.requirement.rule</field>
        <field name="arch" type="xml">
            <tree string="Picking Requirement Rule">
                <field name="name" />
                <field name="domain" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="stock_picking_requirement_rule_action">
        <field name="name">Picking Requirement Rule</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.picking.requirement.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stock_picking_requirement_rule_tree_view" />
    </record>

    <menuitem
        id="stock_picking_requirement_rule_menu"
        parent="stock.menu_warehouse_config"
        name="Requirement Rules"
        action="stock_picking_requirement_rule_action"
        sequence="99"
    />

</odoo>
