<odoo>
    <record id="stock_move_reponsible_view_move_tree" model="ir.ui.view">
        <field name="name">stock.move.reponsible.view.move.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree" />
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="picking_user_id" optional="show" />
            </field>
        </field>
    </record>
    <record id="stock_move_reponsible_view_move_form" model="ir.ui.view">
        <field name="name">stock.move.reponsible.view.move.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form" />
        <field name="arch" type="xml">
            <field name="date_deadline" position="after">
                <field name="picking_user_id" />
            </field>
        </field>
    </record>
</odoo>
