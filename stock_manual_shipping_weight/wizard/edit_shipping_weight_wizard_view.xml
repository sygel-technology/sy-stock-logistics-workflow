<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="edit_shipping_weight_wizard_view_form" model="ir.ui.view">
        <field name="name">edit.shipping.weight.wizard.form</field>
        <field name="model">edit.shipping.weight.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <label for="shipping_weight" string="Specify the new shipping weight"/>
                        <field name="shipping_weight" nolabel="1"/>
                    </group>
                </group>
                <footer>
                    <button name="apply_edition" type="object" string="Apply" class="btn-primary" attrs="{'readonly':[('shipping_weight','=',False)]}"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
