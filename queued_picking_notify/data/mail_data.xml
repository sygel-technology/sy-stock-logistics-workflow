<?xml version="1.0"?>
<odoo>
        <record id="picking_notice" model="mail.template">
            <field name="name">Picking Notice</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="html">
    <table style="border-spacing: 0; width: 100%; max-width: 600px;">
        <thead>
            <tr>
                <th style="text-align: center;">Provider Reference</th>
                <th style="text-align: center;">Provider Name</th>
                <th style="text-align: center;">Internal Reference</th>
                <th style="text-align: center;">Quantity</th>
                <th style="text-align: center;">Units of Measure</th>
            </tr>
        </thead>
        <tbody>
            % for line in object.move_ids_without_package:
                <tr>
                    % if line.product_supplier_code:
                        <td style="text-align: center;">${line.product_supplier_code}</td>
                    % else:
                        <td/>
                    % endif
                    % if line.product_supplier_description:
                        <td style="text-align: center;">${line.product_supplier_description}</td>
                    % else:
                        <td/>
                    % endif
                    % if line.product_id.default_code:
                        <td style="text-align: center;">${line.product_id.default_code}</td>
                    % else:
                        <td/>
                    % endif
                    <td style="text-align: center;">${line.product_uom_qty}</td>
                    <td style="text-align: center;">${line.product_uom.name}</td>
                </tr>
            % endfor
        </tbody>
    </table>
</field>
    </record>
</odoo>
