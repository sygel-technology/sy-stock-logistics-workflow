<odoo>
    <record id="view_purchase_order_type_form_queued_purchase_notify" model="ir.ui.view">
        <field name="name">view.purchase.order.type.form.queued.purchase.notify</field>
        <field name="model">purchase.order.type</field>
        <field name="inherit_id" ref="purchase_picking_notify_interface.view_purchase_order_type_notify_interface"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='mail_notification']" position="inside">
                <group string="Picking">
                    <field name="picking_mail_notify_ids">
                        <tree editable="bottom">
                            <field name="reference_field"/>
                            <field name="empty_field"/>
                            <field name="notify_when" string="When"/>
                            <field name="notify_time" string="Notify Time (Hours)"/>
                            <field name="mail_template_id"/>
                        </tree>
                    </field>
                </group>
            </xpath>
            <xpath expr="//page[@name='log_notification']" position="inside">
                <group string="Picking">
                    <field name="picking_log_note_notify_ids">
                        <tree editable="bottom">
                            <field name="reference_field"/>
                            <field name="empty_field"/>
                            <field name="notify_when" string="When"/>
                            <field name="notify_time" string="Notify Time (Hours)"/>
                            <field name="note_text"/>
                        </tree>
                    </field>
                </group>
            </xpath>
            <xpath expr="//page[@name='activity_notification']" position="inside">
                <group string="Picking">
                    <field name="picking_activity_notify_ids">
                        <tree editable="bottom">
                            <field name="reference_field"/>
                            <field name="empty_field"/>
                            <field name="notify_when" string="When"/>
                            <field name="notify_time" string="Notify Time (Hours)"/>
                            <field name="summary" />
                            <field name="note" />
                            <field name="time_to_deadline" string="Days to Deadline"/>
                            <field name="user_id" strong="User" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
