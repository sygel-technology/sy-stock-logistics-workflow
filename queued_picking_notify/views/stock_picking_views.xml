<odoo>
    <record id="view_picking_form_queued_picking_notify" model="ir.ui.view">
        <field name="name">view.picking.form.queued.picking.notify</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Notification Queues" name="picking_notify_queues">
                    <button name="cancell_all_jobs" string="Cancel All Notifications" type="object" />
                    <button name="redo_jobs" string="Recalculate Notifications" type="object" />
                    <field name="picking_queue_ids" />
                    <field name="has_queues" invisible="1" />
                </page>
            </xpath>
        </field>
    </record>
</odoo>
