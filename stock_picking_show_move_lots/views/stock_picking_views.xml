<odoo>

    <record id="stock_picking_show_move_lots_view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.show.move.lots.view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='lot_ids']" position="attributes">
                <attribute name="readonly">True</attribute>
                <attribute name="attrs">{}</attribute>
                <attribute name="string">Lots/Serial Numbers</attribute>
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>

</odoo>
